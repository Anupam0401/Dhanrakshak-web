---
import { siteConfig } from '../config/site.config';

const base = import.meta.env.BASE_URL;

const footerLinks = [
  { label: 'Privacy Policy', href: `${base}privacy/` },
  { label: 'Terms of Use', href: `${base}terms/` },
  { label: 'Contact', href: `${base}contact/` },
  { label: 'GitHub', href: siteConfig.githubUrl, external: true },
];
---

<footer class="border-t border-themed" style="background-color: var(--bg);">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-lg font-bold mb-3 text-heading">{siteConfig.name}</h3>
        <p class="text-sm text-body mb-4">{siteConfig.tagline}</p>
        <p class="text-xs text-body">Made with &#10084;&#65039; in {siteConfig.country}</p>
      </div>
      
      <div>
        <h4 class="text-sm font-semibold mb-3 text-heading">Links</h4>
        <ul class="space-y-2">
          {footerLinks.map(({ label, href, external }) => (
            <li>
              <a
                href={href}
                target={external ? '_blank' : undefined}
                rel={external ? 'noopener noreferrer' : undefined}
                class="text-sm text-body hover:text-accent transition-colors duration-200"
              >
                {label}
                {external && (
                  <svg class="inline-block w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                  </svg>
                )}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <div>
        <h4 class="text-sm font-semibold mb-3 text-heading">Privacy First</h4>
        <p class="text-sm text-body">Your financial data stays on your device. We don't track, collect, or sell your information.</p>
      </div>
    </div>
    
    <div class="mt-8 pt-8 border-t border-themed flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-sm text-body">&copy; {siteConfig.copyrightYear} {siteConfig.companyName}. All rights reserved.</p>
      <p class="text-xs text-body">{siteConfig.name} {siteConfig.version}</p>
    </div>
  </div>
</footer>
