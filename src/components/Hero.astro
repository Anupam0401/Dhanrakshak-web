---
import { siteConfig } from '../config/site.config';

const base = import.meta.env.BASE_URL;
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-16">
  <div class="absolute inset-0 bg-hero-subtle"></div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 text-center">
    <!-- Logo -->
    <div class="mb-10 flex justify-center animate-hero">
      <div class="hero-logo-container">
        <div class="hero-logo-inner">
          <svg viewBox="0 0 108 108" class="hero-logo-svg" fill="none">
            <path d="M54,24 L72,29 L72,52 C72,67 62,75 54,81 C46,75 36,67 36,52 L36,29 Z" stroke="white" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M45,41 L63,41" stroke="white" stroke-width="2.5" stroke-linecap="round"/>
            <path d="M45,47 L63,47" stroke="white" stroke-width="2.5" stroke-linecap="round"/>
            <path d="M49,47 L49,57 C49,60 51,63 56,63 L62,63" stroke="white" stroke-width="2.5" stroke-linecap="round" fill="none"/>
          </svg>
        </div>
      </div>
    </div>
    
    <h1 class="text-5xl md:text-7xl font-bold mb-6 text-heading tracking-tight animate-hero animate-hero-delay-1">
      {siteConfig.name}
    </h1>
    
    <p class="text-xl md:text-2xl mb-4 text-body max-w-2xl mx-auto font-medium animate-hero animate-hero-delay-2">
      {siteConfig.tagline}
    </p>
    
    <p class="text-base md:text-lg mb-12 text-body max-w-3xl mx-auto leading-relaxed animate-hero animate-hero-delay-2">
      {siteConfig.description}
    </p>
    
    <!-- CTA -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-hero animate-hero-delay-3">
      <a href="#download" class="inline-flex items-center gap-2 px-8 py-4 bg-hero-gradient text-white font-semibold rounded-xl shadow-lg shadow-primary/25 hover:shadow-xl hover:shadow-primary/30 transform hover:scale-105 transition-all duration-200">
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M3 20.5v-2h18v2H3zm1.7-5.3L2.5 13l1.4-1.4L12 19.8l8.1-8.2 1.4 1.4-9.5 9.5-7.7-7.6z" opacity="0"/>
          <path d="M17.6 9.48l1.84-3.18c.16-.31.04-.69-.26-.85a.598.598 0 0 0-.83.22l-1.88 3.24c-2.86-1.21-6.08-1.21-8.94 0L5.65 5.67c-.19-.29-.58-.38-.87-.2-.28.18-.37.54-.22.83L6.4 9.48C3.3 11.25 1.28 14.44 1 18h22c-.28-3.56-2.3-6.75-5.4-8.52zM7 15.25c-.69 0-1.25-.56-1.25-1.25s.56-1.25 1.25-1.25 1.25.56 1.25 1.25-.56 1.25-1.25 1.25zm10 0c-.69 0-1.25-.56-1.25-1.25s.56-1.25 1.25-1.25 1.25.56 1.25 1.25-.56 1.25-1.25 1.25z"/>
        </svg>
        Download for Android
      </a>
      
      <a href={`${base}features/`} class="inline-flex items-center gap-2 px-8 py-4 card font-semibold rounded-xl text-heading hover:border-accent/50 transition-all duration-200">
        Learn More
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
      </a>
    </div>
    
    <!-- Trust badges -->
    <div class="mt-16 flex flex-wrap justify-center gap-8 text-sm text-body animate-hero animate-hero-delay-4">
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
        <span>100% Privacy First</span>
      </div>
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
        <span>Local-First Storage</span>
      </div>
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/></svg>
        <span>Open Source</span>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-logo-container {
    position: relative;
    width: 9rem;
    height: 9rem;
  }
  @media (min-width: 768px) {
    .hero-logo-container {
      width: 11rem;
      height: 11rem;
    }
  }

  /* Glow ring */
  .hero-logo-container::before {
    content: '';
    position: absolute;
    inset: -10px;
    border-radius: 2.25rem;
    background: linear-gradient(135deg, rgba(30, 58, 138, 0.35), rgba(110, 149, 255, 0.35));
    filter: blur(18px);
    z-index: 0;
    animation: glow-pulse 3s ease-in-out infinite alternate;
  }

  @keyframes glow-pulse {
    0% { opacity: 0.6; transform: scale(1); }
    100% { opacity: 1; transform: scale(1.04); }
  }

  .hero-logo-inner {
    position: relative;
    z-index: 1;
    width: 100%;
    height: 100%;
    border-radius: 2rem;
    background: linear-gradient(135deg, #1E3A8A, #2563EB);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1.25rem;
    box-shadow:
      0 24px 60px rgba(30, 58, 138, 0.4),
      inset 0 0 0 1px rgba(255, 255, 255, 0.12);
    transition: transform 300ms ease;
  }

  .hero-logo-inner:hover {
    transform: scale(1.06);
  }

  .hero-logo-svg {
    width: 100%;
    height: 100%;
  }
</style>
