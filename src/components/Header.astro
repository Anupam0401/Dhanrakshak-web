---
import { siteConfig } from '../config/site.config';
import ThemeToggle from './ThemeToggle.astro';

const base = import.meta.env.BASE_URL;

const navItems = [
  { label: 'Home', href: `${base}` },
  { label: 'Features', href: `${base}features/` },
  { label: 'Privacy', href: `${base}privacy/` },
  { label: 'Terms', href: `${base}terms/` },
  { label: 'Contact', href: `${base}contact/` },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 backdrop-blur-md border-b border-themed" style="background-color: color-mix(in srgb, var(--bg) 85%, transparent);">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo + brand -->
      <a href={base} class="flex items-center gap-2.5 group">
        <div class="w-10 h-10 bg-logo-gradient rounded-[0.7rem] flex items-center justify-center transition-transform group-hover:scale-110 shadow-md shadow-primary/20">
          <svg viewBox="0 0 108 108" class="w-7 h-7" fill="none">
            <path d="M54,28 L68,32 L68,52 C68,64 60,71 54,76 C48,71 40,64 40,52 L40,32 Z" stroke="white" stroke-width="3.5" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M47,42 L61,42" stroke="white" stroke-width="3" stroke-linecap="round"/>
            <path d="M47,47 L61,47" stroke="white" stroke-width="3" stroke-linecap="round"/>
            <path d="M50,47 L50,55 C50,58 52,61 56,61 L60,61" stroke="white" stroke-width="3" stroke-linecap="round" fill="none"/>
          </svg>
        </div>
        <span class="text-base font-semibold text-heading">{siteConfig.name}</span>
      </a>
      
      <!-- Desktop nav -->
      <div class="hidden md:flex items-center gap-1">
        {navItems.map(({ label, href }) => {
          const isActive = currentPath === href || currentPath === href.replace(/\/$/, '');
          return (
            <a href={href} class:list={['nav-link', isActive && 'nav-link-active']}>
              {label}
            </a>
          );
        })}
        <div class="ml-2"><ThemeToggle /></div>
      </div>
      
      <!-- Mobile -->
      <div class="flex md:hidden items-center gap-2">
        <ThemeToggle />
        <button id="mobile-menu-toggle" type="button" aria-label="Toggle menu" class="p-2 rounded-lg text-heading hover:bg-surface">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4 space-y-1">
      {navItems.map(({ label, href }) => {
        const isActive = currentPath === href || currentPath === href.replace(/\/$/, '');
        return (
          <a href={href} class:list={['block nav-link', isActive && 'nav-link-active']}>
            {label}
          </a>
        );
      })}
    </div>
  </nav>
</header>

<script is:inline>
  var t = document.getElementById('mobile-menu-toggle');
  var m = document.getElementById('mobile-menu');
  if (t && m) t.addEventListener('click', function() { m.classList.toggle('hidden'); });
</script>
