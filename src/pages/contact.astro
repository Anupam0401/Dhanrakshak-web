---
import { siteConfig } from '../config/site.config';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const base = import.meta.env.BASE_URL;
---

<BaseLayout
  title="Contact - DhanRakshak"
  description="Get in touch with the DhanRakshak team for support, feedback, or questions."
>
  <Header />
  
  <main class="min-h-screen pt-16">
    <div class="page-header-banner">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-14 md:py-20 text-center">
        <div class="flex justify-center mb-5">
          <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center text-accent">
            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"/></svg>
          </div>
        </div>
        <h1 class="text-4xl md:text-5xl font-bold mb-4 page-header-title">Get in Touch</h1>
        <p class="text-lg page-header-subtitle">
          We'd love to hear from you. Whether you have a question, feedback, or need support.
        </p>
      </div>
    </div>
    
    <section class="py-12">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <div class="grid md:grid-cols-2 gap-8">
          <!-- Email -->
          <div class="card p-8 rounded-2xl">
            <div class="mb-4">
              <svg class="w-10 h-10 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"/>
              </svg>
            </div>
            <h2 class="text-xl font-bold mb-2 text-heading">Email Support</h2>
            <p class="text-body mb-4 text-sm">For general inquiries, support requests, or privacy questions.</p>
            <a href={`mailto:${siteConfig.supportEmail}`} class="text-accent hover:underline font-medium inline-flex items-center gap-1">
              {siteConfig.supportEmail}
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/></svg>
            </a>
          </div>
          
          <!-- GitHub -->
          <div class="card p-8 rounded-2xl">
            <div class="mb-4">
              <svg class="w-10 h-10 text-accent" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.603-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.463-1.11-1.463-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z"/>
              </svg>
            </div>
            <h2 class="text-xl font-bold mb-2 text-heading">GitHub Issues</h2>
            <p class="text-body mb-4 text-sm">Report bugs, request features, or contribute to the project.</p>
            <a href={siteConfig.githubIssuesUrl} target="_blank" rel="noopener noreferrer" class="text-accent hover:underline font-medium inline-flex items-center gap-1">
              Open an Issue
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
            </a>
          </div>
        </div>
        
        <div class="mt-12 card p-8 rounded-2xl">
          <h3 class="text-lg font-bold mb-4 text-heading">Before You Contact Us</h3>
          <ul class="space-y-3 text-body text-sm">
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 mt-0.5 text-success shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
              <span>Check our <a href={`${base}features/`} class="text-accent hover:underline">Features page</a> for detailed information about app capabilities.</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 mt-0.5 text-success shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
              <span>Review our <a href={`${base}privacy/`} class="text-accent hover:underline">Privacy Policy</a> for data handling questions.</span>
            </li>
          </ul>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>
